div.subject #{entry.subject}
  .blog-entry
    each element in entry.content
      if (element.content_type == 1)
        p(class=element.class) #{element.content}
      else if (element.content_type == 2)
        img(src=element.content class=element.class)
      else if (element.content_type == 3)
        iframe(width='420' height='315' src=element.content class=element.class)